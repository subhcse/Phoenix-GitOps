# config/local.env
# Phoenix GitOps Homelab Configuration

# Cluster Configuration
CLUSTER_NAME=phoenix-cluster
DOMAIN_SUFFIX=local
K8S_CONTEXT=k3d-phoenix-cluster

# Application Configuration
PHOENIX_IMAGE=your-docker-hub-username/phoenix-app
PHOENIX_TAG=latest
PHOENIX_REPLICAS=2
PHOENIX_PORT=4000

# Database Configuration
POSTGRES_DB=phoenix_app
POSTGRES_USER=app_user
POSTGRES_PASSWORD=secure-password-change-me
POSTGRES_REPLICAS=3

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION=7d
ALERTMANAGER_SLACK_WEBHOOK=

# GitHub Configuration (for Flux bootstrap)
GITHUB_USER=
GITHUB_TOKEN=
GITHUB_REPO=phoenix-gitops-homelab

# SSL Configuration
CERT_MANAGER_EMAIL=your-email@example.com
LETSENCRYPT_STAGING=true

# Resource Limits
CPU_REQUEST=250m
CPU_LIMIT=500m
MEMORY_REQUEST=256Mi
MEMORY_LIMIT=512Mi
