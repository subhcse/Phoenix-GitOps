# config/secrets.example
# Example secrets file - copy to secrets.yaml and update values
# DO NOT commit actual secrets to version control

apiVersion: v1
kind: Secret
metadata:
  name: phoenix-app-secrets
  namespace: phoenix-app
type: Opaque
stringData:
  # Phoenix application secrets
  secret-key-base: "your-64-character-secret-key-base-here"
  live-view-signing-salt: "your-signing-salt-here"
  
  # Database connection
  database-url: "postgresql://app_user:secure-password@postgres-cluster-rw.database.svc.cluster.local:5432/phoenix_app"
  
  # External service APIs
  smtp-password: "your-smtp-password"
  external-api-key: "your-api-key"

---
apiVersion: v1
kind: Secret
metadata:
  name: postgres-credentials
  namespace: database
type: kubernetes.io/basic-auth
stringData:
  username: app_user
  password: secure-password-change-me

---
apiVersion: v1
kind: Secret
metadata:
  name: monitoring-secrets
  namespace: monitoring
type: Opaque
stringData:
  slack-webhook-url: "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
  discord-webhook-url: "https://discord.com/api/webhooks/YOUR/WEBHOOK"
